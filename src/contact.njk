---
title: Contact Us
layout: layout.njk
permalink: /contact/
---
<section id="contact-banner">
  <div class="container">
    <h2>{{ site.contactUsTitle }}</h2>
    <p class="font-volkorn italic text-xl text-white py-4">{{ site.contactUsSubtitle }}</p>
  </div>
</section>
<section>
  <div class="flex flex-row container justify-around">
    <div class="flex flex-col w-1/3">
      <h3>Get in touch</h3>
      <object data="./svg/envelope.svg" width="35" height="35"></object>
      <p>Phone: (123) 456-7890</p>
      <p>1allianceauto@gmail.com</p>
      <br/>
      <object data="./svg/map-pin.svg" width="35" height="35"></object>
      <p>1669 W. Anaheim Street</p>
      <p>Harbor City, CA 90710</p>
    </div>
    <div class="flex flex-col w-1/2">
      <form>
        <div class="flex flex-col pb-4">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="John Doe">
        </div>
        <div class="flex flex-col pb-4">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="">
        </div>
        <button class="border-[#333]">Send Email</button>
      </form>
      <h5 class="text-lg">We'll get back to you within 24 hours</h5>
    </div>
  </div>
</section>